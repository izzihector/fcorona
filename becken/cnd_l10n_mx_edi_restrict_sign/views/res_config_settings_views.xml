<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cnd_l10n_mx_edi_restrict_sign_res_config_settings_inherit_view_form" model="ir.ui.view">
            <field name="name">cnd.l10n.mx.edi.restrict.sign.res.config.settings.inherit.view.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="l10n_mx_edi.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='l10n_mx_edi_settings']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="l10n_mx_edi_xml_file_require"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Is XML file required?</span>
                            <div class="text-muted">
                                Configure if your XML file is required for non signed invoices.
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
